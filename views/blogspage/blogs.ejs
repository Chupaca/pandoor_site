<% layout('layoutindex/mainpage') -%>

<div class="contentMainImgContainer">
     <img class="contentMainImg" alt="" src="<%= process.env.LINKTOBUCKETS + Page.Header.LinkToBucket + Page.Header.ImageId %>" />
     <h1 tabindex="0"><%- Page.Header.Title %></h1>
    <div class="contentTxt" tabindex="0"><%- Page.Header.SubTitleHtml %></div>
    <span class="downBtn" data-scrollto="wrap_container" tabindex="0"><i class="far fa-caret-square-down"></i></span>
</div>

<section id="wrap_container" class="wrap_container">
    <div class="container">
        <div class="contentTextContainer" tabindex="0"><%- Page.Content.ContentHtml %></div>
        <div class="contentImages">
            <% if(Page.Content.ContentImages && Page.Content.ContentImages.length ) {  Page.Content.ContentImages.forEach((item, i) => { %>
                   <img tabindex="0" alt="<%= Page.Header.Title.replace(/<[^>]+>/g, '') +  " " + i %>" src="<%= process.env.LINKTOBUCKETS + item.LinkToBucket + item.ImageId %>" style="width:100%;" onclick="openWithSimpleImageModal(this)"/>
             <%})}%>
        </div>
   
    <div style="margin-top: 5em;">
      <% if(Page.StaticsBlocks && Page.StaticsBlocks.linkBtn){%>
             <a href="<%= Language %>/blogs" class="btn_all_pages_link"><%= Page.StaticsBlocks.linkBtn %></a>
        <% } else {%>
              <a href="<%= Language %>/blogs" class="btn_all_pages_link">לכל המאמרים</a>
        <%}%>
           
    </div>

     </div>
</section>