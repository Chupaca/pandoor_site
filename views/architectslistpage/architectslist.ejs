            <div style="margin-bottom: 5vh;">
                <table id="architects_tb">
                    <tbody>
                     <% Architects.forEach(archi => { %> 
                        <tr onclick="window.open('/architect/<%= archi.Id %>', '_self')" >
                            <td class="architect_logo">
                                <img src="<%=  process.env.LINKTOBUCKETS + archi.Data.ProfileImage %>" alt="תמונה אדריכל" />
                            </td>
                            <td class="architect_name" tabindex="0"><%= archi.Data.Name %></td>
                            <td class="architect_address" tabindex="0"><%= (archi.Data.City + " ,  מחוז " + archi.Data.Location) %> </td>
                            <td class="architect_contacts">
                                <b tabindex="0"> <%= archi.Data.Email %> </b><br>
                            </td>
                             <td class="architect_contacts">
                                <b tabindex="0"><%= archi.Data.PhoneNumber %></b><br>
                                <b tabindex="0"><%= archi.Data.PhoneNumber2 %></b>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
