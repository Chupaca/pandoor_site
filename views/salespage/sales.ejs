<% layout('layoutindex/mainpage') -%>

<div class="contentMainImgContainer">
    <img class="contentMainImg" alt="" src="<%= process.env.LINKTOBUCKETS + Page.Header.LinkToBucket + Page.Header.ImageId %>" />
    <h1 tabindex="0"><%- Page.Header.Title %></h1>
    <div class="contentTxt" tabindex="0"><%- Page.Header.SubTitleHtml %></div>
    <% if(Desktop){ %>
      <% if(Page.StaticsBlocks && Page.StaticsBlocks.FormTitleBlock){%>
               <div style="padding-top:2vh;" class="contentTxt" tabindex="0"><%= Page.StaticsBlocks.FormTitleBlock %></div>
        <% } else {%>
           <div style="padding-top:2vh;" class="contentTxt" tabindex="0">מעוניינים לקבל הצעת מחיר?</div>
        <%}%>
  
    <div class="tbContainer">
    <form class="clientcomment_form" action="/priceoffer" method="post" >
            <lable class="invisible_text">שם מלא</lable><input type="text" class="tb form_input" name="Name" placeholder="<%= global.GlobalVar.Name && global.GlobalVar.Name[Language] ?global.GlobalVar.Name[Language] : 'שם מלא'%>:" required/><i style="color:#ffffff;font-size: 2vh;vertical-align: top;">*</i>
            <lable class="invisible_text">טלפון</lable><input type="text" class="tb form_input" name="PhoneNumber" placeholder="<%= global.GlobalVar.Phone && global.GlobalVar.Phone[Language]? global.GlobalVar.Phone[Language] : 'טלפון'%>:" required/><i style="color:#ffffff;font-size: 2vh;vertical-align: top;">*</i>
            <lable class="invisible_text">אי-מייל</lable><input type="text" class="tb form_input" name="Email" placeholder="<%= global.GlobalVar.Email && global.GlobalVar.Email[Language]?global.GlobalVar.Email[Language] : 'אימייל'%>:" />
            <lable class="invisible_text">עיר</lable><input type="text" class="tb form_input" name="City" placeholder="<%= global.GlobalVar.City && global.GlobalVar.City[Language] ?global.GlobalVar.City[Language] : 'עיר'%>:" required/><i style="color:#ffffff;font-size: 2vh;vertical-align: top;">*</i>
            <input name="FromPage" type="hidden" class="tb form_input" value="אתר מבצעים" />
            <input type="submit" class="tb send_btn" value="<%= global.GlobalVar.Send && global.GlobalVar.Send[Language] ? global.GlobalVar.Send[Language] : 'שליחה'%>"/>
            <br><span style="color: #ffffff;float: right;margin-right: 7vh;">*<%= global.GlobalVar.RequiredFields && global.GlobalVar.RequiredFields[Language] ? global.GlobalVar.RequiredFields[Language] : 'שדות חובה'%></span>
    </form>
    </div>
    <%}%>
     <% if(Page.StaticsBlocks && Page.StaticsBlocks.FormTitleBlock){%>
             <span data-scrollto="bottom_side_form" class="event_scroll_to_el to_form_section"><%= Page.StaticsBlocks.FormTitleBlock %></span>
        <% } else {%>
          <span data-scrollto="bottom_side_form" class="event_scroll_to_el to_form_section">מעוניינים לקבל הצעת מחיר</span>
        <%}%>
    
    <span class="downBtn" data-scrollto="wrap_container" tabindex="0"><i class="far fa-caret-square-down"></i></span>
</div>

<section id="wrap_container" class="wrap_container">
    <div class="container">
     <% if(Page.StaticsBlocks && Page.StaticsBlocks.SalesTitleBlock){%>
            <h2 tabindex="0"><%= Page.StaticsBlocks.SalesTitleBlock %></h2>
        <% } else {%>
            <h2 tabindex="0">דלתות פנים במבצע - כל ההטבות וההנחות העדכניות</h2>
        <%}%>
    
     <div class="section_text" tabindex="0"> <%- Page.Content.ContentHtml %></div>
     <br>
        <div style="text-align: center;" >
             <% if(Page.Content.ContentImages && Page.Content.ContentImages.length ) {  Page.Content.ContentImages.forEach((item,i) => { %>
                   <img tabindex="0" alt="מבצע לדלתות פנים" src="<%= process.env.LINKTOBUCKETS + item.LinkToBucket + item.ImageId %>" data-index="<%= i %>" 
                   onclick="openWithSimpleImageModal(this)" style="width:82%;" />
             <%})}%>
        </div>
         <div class="btn_all_pages_wrap">
        <% if(Page.StaticsBlocks && Page.StaticsBlocks.SalesBtnBlock){%>
            <a href="<%= Language %>/#sales_anchor" class="btn_all_pages_link"><%= Page.StaticsBlocks.SalesBtnBlock %></a>
        <% } else {%>
            <a href="<%= Language %>/#sales_anchor" class="btn_all_pages_link">לכל המבצעים</a>
        <%}%>
        </div>
    </div>
    
</section>

<% if(!Desktop){%>
    <section id="bottom_side_form" class="wrap_container">
        <div class="container">
          <% if(Page.StaticsBlocks && Page.StaticsBlocks.FormTitleBlock){%>
             <h2><%= Page.StaticsBlocks.FormTitleBlock %></h2>
        <% } else {%>
           <h2>מעוניינים לקבל הצעת מחיר?</h2>
        <%}%>
           
            <div class="tbContainer bottom_side">
           <form class="clientcomment_form" action="/priceoffer" method="post"  >
                    <input type="text" class="tb form_input" name="Name" placeholder="<%= global.GlobalVar.Name && global.GlobalVar.Name[Language] ?global.GlobalVar.Name[Language] : 'שם מלא'%>:" />
                    <input type="text" class="tb form_input" name="PhoneNumber" placeholder="<%= global.GlobalVar.Phone && global.GlobalVar.Phone[Language]? global.GlobalVar.Phone[Language] : 'טלפון'%>:" />
                    <input type="text" class="tb form_input" name="Email" placeholder="<%= global.GlobalVar.Email && global.GlobalVar.Email[Language]?global.GlobalVar.Email[Language] : 'אימייל'%>:" />
                    <input type="text" class="tb form_input" name="City" placeholder="<%= global.GlobalVar.City && global.GlobalVar.City[Language] ?global.GlobalVar.City[Language] : 'עיר'%>:" />
                    <input name="FromPage" type="hidden" class="tb form_input" value="אתר מבצעים" />
                    <input type="submit" class="tb send_btn" value="<%= global.GlobalVar.Send && global.GlobalVar.Send[Language] ? global.GlobalVar.Send[Language] : 'שליחה'%>"  />
            </form>
            </div>
        </div>
    </section>
    <%}%>

     