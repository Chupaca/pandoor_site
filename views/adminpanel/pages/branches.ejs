<% layout('adminpanel/index') -%>

<h2 class="title_wrap">
    סניפים
</h2>
<div>
    <button class="btn_class switch_wraps" data-wrap="metadata">עריכת מטה</button>
    <button class="btn_class switch_wraps" data-wrap="header">עריכת כותרת</button>
    <button class="btn_class switch_wraps" data-wrap="external">עריכת סוחרים</button>
    <button class="btn_class switch_wraps" data-wrap="staticblocks">בלוקים סטטים</button>
    <button class="btn_class switch_wraps active" data-wrap="versions">רשימת גרסות</button>
    <select class="select_item" id="language_select_preview" data-type="0" style="width: 150px;font-size: 19px;">
        <option value="branches" selected>עברית</option>
        <option value="en_branches">English</option>
        <option value="ru_branches">Русский</option>
        <option value="ar_branches">العربية</option>
    </select>
    <button class="btn_class btn_green" id="save_new" style="float:left;" disabled>לשמור</button>
    <select class="select_item" id="language_select" style="width: 150px;font-size: 19px;float:left;background:#eee" disabled>
        <option value selected>בחר...</option>
        <option value="he">עברית</option>
        <option value="en">English</option>
        <option value="ru">Русский</option>
        <option value="ar">العربية</option>
    </select>
</div>

<!--  meta  -->
<div class="wrap_two_col" style="display:none;" data-wrap="metadata">
    <div class="col">
        <table class="meta_data_table">
            <tbody></tbody>
        </table>
    </div>
    <div class="col">
        <button class="btn_class" id="add_new_meta">הוסיף חדש</button>
    </div>
</div>

<!--   header -->
<div class="wrap_three_col wrap_header_page" style="display:none;" data-wrap="header">
    <div class="col" style="background:#ffffff;text-align: center;">
        <h2>תמונה</h2>
        <div class="wrap_images_" data-wrap_images="headers"></div>
    </div>

    <div class="col" style="background:none;text-align: center;position: relative;">
        <h2>כותרת ראשית</h2>
        <input type="text" class="title_header" value=""  />
        <h2>כותרת תחתית</h2>
        <textarea class="text_area_page_editor sub_title_header" style="display:block;"></textarea>
        <div class="original_html_text" style="display:none;"></div>
        <div>
            <button class="btn_class remove_text">נקוי</button>
        </div>
    </div>
    <div class="col">
         <button class="btn_class upload_btn" data-bucket="headers" style="float:none;" > הוספת קובץ <i class="fas fa-cloud-upload-alt"></i></button><br>
         <button class="btn_class open_gallery" data-bucket="headers">תמונת כותרת</button><br>
          <button class="btn_class text_formated">הוסיף תוכן</button>
    </div>
</div>

<div class="wrap_two_col" style="display:none;" data-wrap="external">
    <div class="col">
        <table class="external_branches_table" style="width:100%;">
            <tbody></tbody>
        </table>
    </div>

    <div class="col">
        <button class="btn_class" id="add_new_external_branch">הוסיף חדש</button>
    </div>
</div>

<div class="wrap_two_col" style="display:none;" data-wrap="staticblocks">
    <div class="col" style="max-height: 67vh;">
        <table class="statics_data_table">
            <tbody>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="כותרת ליד" readonly /></td><td><input name="FormTitleBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="כותרת דף" readonly /></td><td><input name="PageTitleBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="תוכן דף" readonly /></td><td><textarea style="margin: 10px;height: 21vh;resize: none;" name="PageContentBlock" class="static_blocks" ></textarea></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="כותרת סניפים זרים" readonly /></td><td><input name="ExternalBranchesTitleBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="תוכן סניפים זרים" readonly /></td><td><textarea style="margin: 10px;height: 21vh;resize: none;" name="ExternalBranchesContentBlock" class="static_blocks" ></textarea></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="תוכן תחתון סניפים זרים" readonly /></td><td><textarea style="margin: 10px;height: 21vh;resize: none;" name="ExternalBranchesContentFooterBlock" class="static_blocks"></textarea></td></tr>    
                
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="פקס" readonly /></td><td><input name="FaxBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="טלפון" readonly /></td><td><input name="PhoneBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="אימייל" readonly /></td><td><input name="EmailBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="שעות פעילות" readonly /></td><td><input name="HoursBlock" class="static_blocks" /></td></tr>
                <tr style="outline:2px solid #bbb;margin-bottom:1vh;padding:1vh;"><td style="width:20%;background:#928c8c;"><input value="כתובת" readonly /></td><td><input name="AddressBlock" class="static_blocks" /></td></tr>
            </tbody>
        </table>
    </div>
    <div class="col">
         <button class="btn_class text_formated">הוסיף תוכן</button>
    </div>
</div>

<div class="wrap_three_col" style="display:inline-flex;" data-wrap="versions" id="vertion_wrap">
    <div id="sortable" class="col connectedSortable">
     <h2 class="version_title">פעיל</h2>
        <% if(Prod && Prod.Data.Header){ let item = Prod; %>
        <li data-id="<%= item.Id %>" data-bucket="branches">
            <div class="page_item">
                <span class="page_item_position"><b><%= item.Position %></b></span>
                 <b style="margin:0 2vh;">&#124;</b>
                <b class="language_type_in_row"><%= item.Language || "he" %></b>
                <b style="margin:0 2vh;">&#124;</b>
                <span class=""><%= moment(item.DateCreate).tz('Asia/Jerusalem').format("DD/MM/YYYY HH:mm") %></span>
                <b style="margin:0 2vh;">&#124;</b>
                <b><span class="page_item_desc" ><%= item.Data.Header.Title %></span></b>
                <i class="fas fa-bars nav_options"></i>
            </div>
        </li>
        <%}%>
    </div>


    <div id="sortable_tmp" class="col connectedSortable">
    <h2 class="version_title">לא פעיל</h2>
        <% if(Versions && Versions.length){ Versions.forEach(item => {   if(!Prod || item.Id != Prod.Id){ %>
        <li data-id="<%= item.Id %>" data-bucket="branches-tmp">
            <div class="page_item">
                <span class="page_item_position"><b>0</b></span>
                 <b style="margin:0 2vh;">&#124;</b>
                <b class="language_type_in_row"><%= item.Language || "he" %></b>
                <b style="margin:0 2vh;">&#124;</b>
                <span class=""><%= moment(item.DateCreate).tz('Asia/Jerusalem').format("DD/MM/YYYY HH:mm") %></span>
                <b style="margin:0 2vh;">&#124;</b>
                <b><span class="page_item_desc" ><%= item.Data.Header.Title %></span></b>
                <i class="fas fa-bars nav_options"></i>
                <i class="fas fa-trash-alt remove_page" data-page="branches-tmp" style="margin:0 3vh;cursor:pointer;"  data-id="<%= item.Id %>"></i>
            </div>
        </li>
        <%}})}%>
    </div>

     <div class="col" style="width:10%;">
        <button class="btn_class btn_purple" id="template_page" style="float:none;" disabled>דוגמא</button><br>
        <button class="btn_class" id="preview_page" disabled>הצגה</button><br>
        <button class="btn_class btn_blue" id="publish_page">לפרסם</button>
    </div>

</div>